<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:contentDescription="@string/not_loading"
        app:srcCompat="@drawable/charusat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textSize="30sp"
        android:textColor="#EB4747"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WELCOME_TITLE1"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WELCOME_TITLE1"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#B25068"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hyperlink_charusat"
        android:text="@string/hyperlink_charusat"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />


</LinearLayout>